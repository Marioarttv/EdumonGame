        --secondary-light: #55efc4;
        --accent: #ff9f43;
        --dark: #2d3436;
        --light: #dfe6e9;
        --white: #ffffff;
        --card-bg: rgba(45, 52, 54, 0.85);
        --border-radius: 12px;
        --transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
