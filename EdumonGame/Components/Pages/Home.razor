        0%, 100% { opacity: 0; transform: scale(0.5); }
        50% { opacity: 1; transform: scale(1); }
    }

    /* Background Elements */
    .game-bg-elements {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        pointer-events: none;
        z-index: 0;
    }

    .floating-monster {
        position: absolute;
        width: 120px;
        height: 120px;
        background-repeat: no-repeat;
        background-size: contain;
        filter: drop-shadow(0 5px 15px rgba(0, 0, 0, 0.3));
    }

    .monster-1 {
