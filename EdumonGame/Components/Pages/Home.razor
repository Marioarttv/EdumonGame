    .platform {
        position: absolute;
        bottom: 10%;
        left: 25%;
        width: 50%;
        height: 10px;
        background: radial-gradient(ellipse at center, rgba(255,255,255,0.3) 0%, rgba(255,255,255,0) 70%);
        border-radius: 50%;
        transform: scaleY(0.5);
        filter: blur(5px);
        animation: platform-pulse 4s ease-in-out infinite;
    }

    @@keyframes float {
        0%, 100% { transform: translateY(0) rotate(0deg); }
        50% { transform: translateY(-30px) rotate(5deg); }
    }

    @@keyframes platform-pulse {
        0%, 100% { opacity: 0.2; transform: scaleX(1) scaleY(0.5); }
        50% { opacity: 0.6; transform: scaleX(1.1) scaleY(0.5); }
    }

    /* Logo Area */
    .logo-area {
        position: relative;
        margin-top: 2rem;
        display: flex;
        flex-direction: column;
        align-items: center;
        z-index: 1;
    }

    .game-title {
        font-family: 'Impact', 'Arial Black', sans-serif;
        font-size: 5rem;
        font-weight: bold;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        display: flex;
        margin-bottom: 0.5rem;
    }

    .letter {
        display: inline-block;
        position: relative;
        color: transparent;
        background: linear-gradient(135deg, var(--primary-light), var(--primary-dark));
        -webkit-background-clip: text;
        background-clip: text;
        text-shadow: 0 0 15px rgba(108, 92, 231, 0.5);
        animation: letter-bounce 3s infinite;
        transform-origin: bottom center;
    }

    .letter:nth-child(1) { animation-delay: 0.1s; }
    .letter:nth-child(2) { animation-delay: 0.2s; }
    .letter:nth-child(3) { animation-delay: 0.3s; }
    .letter:nth-child(4) { animation-delay: 0.4s; }
    .letter:nth-child(5) { animation-delay: 0.5s; }
    .letter:nth-child(6) { animation-delay: 0.6s; }

    @@keyframes letter-bounce {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(-10px); }
    }

    .tagline {
        font-size: 1.2rem;
        text-align: center;
        color: var(--light);
        text-shadow: 0 2px 10px rgba(0,0,0,0.5);
        opacity: 0.8;
        max-width: 80%;
    }

    /* Main Menu Card */
    .main-menu {
        position: relative;
        width: 100%;
        max-width: 600px;
        margin: 2rem auto;
        z-index: 1;
    }

    .menu-card {
        position: relative;
        background: var(--card-bg);
        border-radius: var(--border-radius);
        backdrop-filter: blur(10px);
        overflow: hidden;
        padding: 2.5rem;
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.5),
                    0 5px 15px rgba(0, 0, 0, 0.3),
                    0 0 0 1px rgba(255, 255, 255, 0.1) inset;
        border: 1px solid rgba(255, 255, 255, 0.1);
        transform-style: preserve-3d;
        transform: perspective(1000px) rotateX(0deg);
        transition: var(--transition);
        animation: card-intro 1.2s cubic-bezier(0.34, 1.56, 0.64, 1);
    }

    .card-glow {
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background: radial-gradient(
            circle at center,
            rgba(108, 92, 231, 0.3) 0%,
            rgba(108, 92, 231, 0) 70%
        );
        opacity: 0.5;
        pointer-events: none;
        animation: glow-rotate 10s linear infinite;
    }

    @@keyframes glow-rotate {
        0% { transform: rotate(0deg); }
        100% { transform: rotate(360deg); }
    }

    @@keyframes card-intro {
        0% { transform: perspective(1000px) rotateX(30deg) translateY(100px); opacity: 0; }
        100% { transform: perspective(1000px) rotateX(0deg) translateY(0); opacity: 1; }
    }

    .card-content {
        position: relative;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1.5rem;
    }

    /* Hero Mascot */
    .hero-mascot {
        width: 150px;
        height: 150px;
        background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 200 200"><circle cx="100" cy="100" r="80" fill="%23a29bfe"/><circle cx="70" cy="80" r="18" fill="white"/><circle cx="130" cy="80" r="18" fill="white"/><circle cx="70" cy="80" r="8" fill="black"/><circle cx="130" cy="80" r="8" fill="black"/><path d="M 70 130 Q 100 150 130 130" fill="none" stroke="white" stroke-width="8" stroke-linecap="round"/><path d="M 60 60 L 80 50" stroke="%236c5ce7" stroke-width="4" stroke-linecap="round"/><path d="M 140 60 L 120 50" stroke="%236c5ce7" stroke-width="4" stroke-linecap="round"/></svg>');
        background-size: contain;
        background-repeat: no-repeat;
        position: relative;
        animation: mascot-bounce 4s ease-in-out infinite;
        filter: drop-shadow(0 10px 20px rgba(0, 0, 0, 0.4));
    }

    .mascot-shadow {
        position: absolute;
        bottom: -15px;
        left: 25%;
        width: 50%;
        height: 10px;
        background: rgba(0, 0, 0, 0.3);
        border-radius: 50%;
        filter: blur(4px);
        animation: shadow-pulse 4s ease-in-out infinite;
    }

    @@keyframes mascot-bounce {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(-15px); }
    }

    @@keyframes shadow-pulse {
        0%, 100% { transform: scaleX(1); opacity: 0.3; }
        50% { transform: scaleX(0.7); opacity: 0.1; }
    }

    /* Menu Content */
    .menu-header {
        text-align: center;
        margin-bottom: 1rem;
    }

    .menu-header h2 {
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
        background: linear-gradient(135deg, var(--light), var(--white));
        -webkit-background-clip: text;
        background-clip: text;
        color: transparent;
    }

    .menu-header p {
        font-size: 1rem;
        line-height: 1.6;
        color: var(--light);
        opacity: 0.8;
        max-width: 400px;
    }

    /* Feature Badges */
    .feature-badges {
        display: flex;
        justify-content: center;
        flex-wrap: wrap;
        gap: 1rem;
        width: 100%;
    }

    .badge {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.5rem;
        padding: 1rem;
        background: rgba(255, 255, 255, 0.05);
        border-radius: 8px;
        border: 1px solid rgba(255, 255, 255, 0.1);
        width: 80px;
        transition: var(--transition);
    }

    .badge:hover {
        transform: translateY(-5px);
        background: rgba(255, 255, 255, 0.1);
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
    }

    .badge-icon {
        font-size: 1.8rem;
        filter: drop-shadow(0 2px 4px rgba(0, 0, 0, 0.3));
    }

    .badge-label {
        font-size: 0.8rem;
        font-weight: 600;
        color: var(--white);
    }

    /* Buttons */
    .menu-buttons {
        display: flex;
        justify-content: center;
        gap: 1rem;
        width: 100%;
        margin-top: 1rem;
    }

    .game-btn {
        position: relative;
        min-width: 150px;
        padding: 0.8rem 1.5rem;
        border: none;
        border-radius: 50px;
        font-size: 1rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 1px;
        cursor: pointer;
        overflow: hidden;
        transition: var(--transition);
        outline: none;
    }

    .primary-btn {
        background: linear-gradient(135deg, var(--primary-light), var(--primary-dark));
        color: var(--white);
        box-shadow: 0 5px 15px rgba(108, 92, 231, 0.4);
    }

    .secondary-btn {
        background: rgba(255, 255, 255, 0.1);
        color: var(--white);
        border: 1px solid rgba(255, 255, 255, 0.2);
    }

    .game-btn:disabled {
        opacity: 0.5;
        cursor: not-allowed;
    }

    .game-btn:not(:disabled):hover {
        transform: translateY(-3px);
    }

    .primary-btn:not(:disabled):hover {
        box-shadow: 0 8px 25px rgba(108, 92, 231, 0.6);
    }

    .secondary-btn:not(:disabled):hover {
        background: rgba(255, 255, 255, 0.2);
    }

    .game-btn:not(:disabled):active {
        transform: translateY(1px);
    }

    .btn-glow {
        position: absolute;
        top: 0;
        left: -100%;
        width: 50%;
        height: 100%;
        background: linear-gradient(
            90deg,
            rgba(255, 255, 255, 0) 0%,
            rgba(255, 255, 255, 0.3) 50%,
            rgba(255, 255, 255, 0) 100%
        );
        transform: skewX(-20deg);
        animation: btn-shine 3s infinite;
        pointer-events: none;
    }

    @@keyframes btn-shine {
        0% { left: -100%; }
        20%, 100% { left: 200%; }
    }

    /* Footer */
    .game-footer {
        width: 100%;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem 0;
        z-index: 1;
    }

    .social-icons {
        display: flex;
        gap: 1rem;
    }

    .social-icon {
        width: 30px;
        height: 30px;
        border-radius: 50%;
        background-color: rgba(255, 255, 255, 0.1);
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: var(--transition);
    }

    .social-icon:hover {
        transform: translateY(-3px);
        background-color: rgba(255, 255, 255, 0.2);
    }

