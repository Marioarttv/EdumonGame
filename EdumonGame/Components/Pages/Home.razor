@page "/"
@using EdumonGame.Services

<div class="game-container">
    <div class="stars">
        @for (int i = 0; i < 50; i++)
        {
            <div class="star"></div>
        }
    </div>
    
    <div class="game-bg-elements">
        <div class="floating-monster monster-1"></div>
        <div class="floating-monster monster-2"></div>
        <div class="floating-monster monster-3"></div>
        <div class="platform"></div>
    </div>
    
    <div class="logo-area">
        <h1 class="game-title">
            <span class="letter">E</span>
            <span class="letter">D</span>
            <span class="letter">U</span>
            <span class="letter">M</span>
            <span class="letter">O</span>
            <span class="letter">N</span>
        </h1>
        <div class="tagline">Where Learning Becomes Adventure</div>
    </div>
    
    <div class="main-menu">
        <div class="menu-card">
            <div class="card-glow"></div>
            <div class="card-content">
                <div class="hero-mascot">
                    <div class="mascot-shadow"></div>
                </div>
                
                <div class="menu-header">
                    <h2>Begin Your Journey</h2>
                    <p>Catch, train, and battle with Edumon while mastering new knowledge!</p>
                </div>
                
                <div class="feature-badges">
                    <div class="badge">
                        <div class="badge-icon">🏆</div>
                        <div class="badge-label">Battle</div>
                    </div>
                    <div class="badge">
                        <div class="badge-icon">🧠</div>
                        <div class="badge-label">Learn</div>
                    </div>
                    <div class="badge">
                        <div class="badge-icon">🔍</div>
                        <div class="badge-label">Explore</div>
                    </div>
                    <div class="badge">
                        <div class="badge-icon">⚡</div>
                        <div class="badge-label">Evolve</div>
                    </div>
                </div>
                
                <div class="menu-buttons">
                    <button class="game-btn primary-btn" @onclick="StartNewGame">
                        <span class="btn-glow"></span>
                        <span class="btn-content">New Game</span>
                    </button>
                    <button class="game-btn secondary-btn" disabled>
                        <span class="btn-glow"></span>
                        <span class="btn-content">Continue</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
    
    <div class="game-footer">
        <div class="social-icons">
            <div class="social-icon discord"></div>
            <div class="social-icon github"></div>
            <div class="social-icon twitter"></div>
        </div>
        <div class="version-badge">v0.1.0 Alpha</div>
    </div>
</div>

